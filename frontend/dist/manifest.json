{
    "name": "IntrvuFit - Resume optimizer",
    "version": "0.0.7",
    "manifest_version": 3,
    "action": {
        "default_title": "IntrvuFit - Resume Optimizer"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "https://*.linkedin.com/*",
        "http://127.0.0.1:8000/*",
        "http://localhost:8000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/jobs/*",
                "https://*.linkedin.com/jobs/*",
                "https://www.linkedin.com/company/*/jobs/*",
                "https://*.linkedin.com/company/*/jobs/*"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "side-panel-injector.js"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "index.html",
                "static/*",
                "assets/*",
                "side-panel.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}