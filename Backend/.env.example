# Groq API Key (required) - Get from https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Server Configuration
# PORT=8000
# ENVIRONMENT=development
# DEBUG=false

# CORS Settings (comma-separated list of allowed origins)
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# PDF Processing Limits
# MAX_PDF_SIZE_MB=50
# MAX_PDF_PAGES=100
# MAX_TEXT_LENGTH=100000

# Caching Settings
# CACHE_SIZE=100
# CACHE_TTL_SECONDS=3600

# Redis Settings (for distributed caching)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Upstash Redis REST (Recommended for Vercel/Serverless)
# Get these from the 'REST' tab in Upstash 'Connect' section
UPSTASH_REDIS_REST_URL=https://your-database-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-rest-token

# For standard TCP Redis (if not using REST)
# REDIS_URL=rediss://default:password@your-database.upstash.io:6379

# Request Timeout Settings
REQUEST_TIMEOUT=120

# Authentication Settings (optional - set REQUIRE_AUTH=true to enable)
REQUIRE_AUTH=false
VALID_API_KEYS=your-secret-key-1,your-secret-key-2

# Security Settings
MAX_FILE_SIZE_MB=10
MAX_TEXT_LENGTH=50000

# LLM Settings
# LLM_MODEL=openai/gpt-oss-120b
# LLM_TEMPERATURE=0.3
# LLM_MAX_TOKENS=8000
# LLM_TIMEOUT=30.0